import sys
import base64

args = sys.argv[1:]

if len(args) < 2:
		print("Usage")
		print("  encode: base64 -e <string>")
		print("  decode: base64 -d <string>")
		exit(1)	

flag = args[0]
orginal = args[1]
byte_str = orginal.encode('utf-8')	

if flag == "-e":
	transformed = base64.b64encode(byte_str)
elif flag == "-d":
	transformed = base64.b64decode(byte_str)

print(transformed.decode())
